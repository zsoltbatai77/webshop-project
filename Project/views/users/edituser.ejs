<html lang="en">
<%- include("../partials/header.ejs",  { title: "Edit User" }) %>
<body>
    <%- include("../partials/nav.ejs") %>
    <link rel="stylesheet" href="/css/upload.css">
    <div class = "user-container">
        <form  action="/users/edituser/<%= user._id %>" method="POST" >
            
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= user.email %>" disabled>
            
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= user.name %>" required>
            
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" value="<%= user.address %>">
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Enter new password">

            <label for="adminPrivileges">Admin Privileges:</label>
            <input type="checkbox" id="adminPrivileges" name="adminPrivileges" <%= user.adminPrivileges ? "checked" : "" %>>

            <button type="submit">Save Changes</button>
        </form>

    </div>
    <%- include("../partials/footer.ejs") %>
</body>
</html>
