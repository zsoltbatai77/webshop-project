<html lang="en">
<%- include("../partials/header.ejs") %>
<body>
  <%- include("../partials/nav.ejs") %>
  <div style="width: 70%; background-color: #b5d2da; margin: auto; padding: 2%; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
    
    <form name="createBookForm" id="createBookForm" method="post" action="/books/create">
      <label for="title">Title: </label>
      <input style="width: 250px" type="text" name="title" id="title" required><br><br>

      <label for="author">Author: </label>
      <input style="width: 250px" type="text" name="author" id="author" required><br><br>

      <label for="price">Price: </label>
      <input style="width: 80px;" type="number" name="price" id="price" required><br><br>

      <label for="year">Year: </label>
      <input style="width: 60px;" type="number" name="year" id="year" required><br><br>

      <label for="category">Category: </label>
      <input type="text" name="category" id="category" required><br><br>

      <label for="description">Description: </label>
      <input style="width: 90%; height: 30px;" type="text" name="description" id="description" required><br><br>

      <label for="rating">Rating: </label>
      <input style="width: 40px;" type="number" name="rating" id="rating" required><br><br>

      <label for="isBestSeller">Best Seller? </label>
      <input type="checkbox" name="isBestSeller" id="isBestSeller"><br><br>

      <label for="imagePath">Image path: </label>
      <input style="width: 500px;" type="text" name="imagePath" id="imagePath" required><br><br>

      <button type="submit">Create book</button>
    </form>
  </div>

  <%- include("../partials/footer.ejs") %>
</body>
</html>